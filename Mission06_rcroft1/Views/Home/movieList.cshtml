@{
    ViewData["Title"] = "MovieList";
}
@model List<MovieData>

@*the table to display all the movies*@

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Category</td>
        </tr>

        <tbody>
            @foreach (var x in Model)
                {
            <tr>
                <td>@x.title</td>
                <td>@x.year</td>
                <td>@x.director</td>
                <td>@x.rating</td>
                <td>@x.edited</td>
                <td>@x.lentTo</td>
                <td>@x.notes</td>
                <td>@x.Category.CategoryName</td>

                @*route to edit and delete entries*@

                <td><a asp-controller="Home" asp-action="Edit" asp-route-MovieId="@x.MovieId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-MovieId="@x.MovieId">Delete</a></td>
            </tr>
                }
        </tbody>
</table>